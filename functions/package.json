{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:clean": "rimraf lib && npm run build",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build:clean && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/jsdom": "12.2.4",
    "axios": "0.19.0",
    "firebase-admin": "8.2.0",
    "firebase-functions": "3.1.0",
    "firestore-simple": "4.0.0",
    "jsdom": "15.1.1"
  },
  "devDependencies": {
    "firebase-functions-test": "0.1.6",
    "firebase-tools": "7.1.1",
    "rimraf": "3.0.2",
    "typescript": "3.5.3"
  },
  "private": true
}
